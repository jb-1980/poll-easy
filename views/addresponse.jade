extends index.jade

block title
  title Poll Easy | View Poll
  
block body_block
  .col-md-4.col-md-offset-4.panel(style="padding-top:20px;")
    div
      h3.text-center(style="border-bottom:thin solid;") #{poll.question}
      form#poll_form.form-signin.col-md-12(method='post', action='/addresponse/'+poll.id)
        for option in poll.options
          .radio.radio-primary
            label
              input(type="radio", name="optionsRadios", value=option, checked="")
              | #{option}
        button.text-center.btn.btn-raised.btn-primary.btn-lg(type='submit') submit
        a.btn.btn-raised.btn-primary.btn-lg(href="/viewpoll/"+poll.owner.local.username_slug+'/'+poll.question_slug) cancel
    h4.text-center
      |Share this poll at:
      br
      a #{url}